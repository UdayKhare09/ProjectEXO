<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="dev.uday.GUI.ServerUI"
            prefHeight="600.0" prefWidth="800.0">

    <top>
        <VBox spacing="10" styleClass="header">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>
            <HBox alignment="CENTER_LEFT" spacing="20">
                <Label text="ProjectEXO Server" styleClass="title-label"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="timeElapsedLabel" text="Time Elapsed: 00:00:00"/>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="20">
                <Label fx:id="serverInfoLabel" text="IP: 127.0.0.1 | Port: 2005"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="currentModelLabel" text="Current Model: gemma3:1b"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <SplitPane dividerPositions="0.5" orientation="VERTICAL">
            <VBox spacing="10">
                <padding>
                    <Insets top="15" right="15" bottom="15" left="15"/>
                </padding>
                <Label text="Online Users" styleClass="section-header"/>
                <ListView fx:id="onlineUsersListView" VBox.vgrow="ALWAYS"/>
            </VBox>
            <VBox spacing="10">
                <padding>
                    <Insets top="15" right="15" bottom="15" left="15"/>
                </padding>
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label text="Available AI Models" styleClass="section-header"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button fx:id="switchModelButton" text="Switch to Selected Model" styleClass="action-button"/>
                </HBox>
                <ListView fx:id="availableModelsListView" VBox.vgrow="ALWAYS"/>
            </VBox>
        </SplitPane>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10" styleClass="footer">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>
            <Button fx:id="registerUserButton" text="Register New User" styleClass="action-button"/>
        </HBox>
    </bottom>

</BorderPane>